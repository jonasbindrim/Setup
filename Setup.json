{
    "settings": {
        "project_file_as_work_dir": true
    },
    "jobs": {
        "list-directories": {
            "tasks": [
                { "task": "ls" }
            ],
            "parallel": true
        },
        "make-directories": {
            "tasks": [
                { "task": "mkdir1", "args": ["dir1"] }
            ]
        },
        "make-directories2": {
            "tasks": [
                { "task": "mkdir2" }
            ]
        },
        "sleeper": {
            "tasks": [
                { "task": "sleep5" },
                { "task": "sleep10" },
                { "task": "sleep2" },
                { "task": "sleep10" }
            ],
            "parallel": true
        }
    },
    "tasks": {
        "ls": { "command": "ls", "args": ["-l"] },
        "mkdir1": { "command": "./temp/mkdir.sh", "required_call_args": 1 },
        "mkdir2": { "command": "./temp/mkdir2.sh" },
        "sleep5": { "command": "sleep", "args": ["5"]},
        "sleep10": { "command": "sleep", "args": ["10"]},
        "sleep2": { "command": "sleep", "args": ["2"]}
    }
}